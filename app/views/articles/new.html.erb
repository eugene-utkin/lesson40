<div class="container">
	<div class="row">
		<div class="col-12">
			<h1>New Article</h1>

				<%= form_for :article, url: articles_path do |f| %>
					<%= f.hidden_field :articleauthor, value: current_user.username %>

					<p>
						<%= f.label :title %><br />
						<%= f.text_field :title %>
					</p>

					<p>
						<%= f.label :text %><br />
						<%= f.text_area :text %>
					</p>

					<p>
						<%= f.submit %>
					</p>

				<% end %>

		</div>
	</div>
</div>