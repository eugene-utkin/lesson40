<h1><%= @article.title %></h1>
<p>
	<%= @article.text %>
</p>

	<h2>Comments:</h2>

<% @article.comments.each do |comment| %>
	<p>
	<i><%= comment.author %> said:</i><br />
	</p>
	<p>
		<%= comment.body %>	
	</p>
	<hr />
<% end %>


	<h2>Add comments:</h2>

<p>
<%= form_for([@article, @article.comments.build]) do |f| %>
	<p>
		Leave your comment here:<br />
		<%= f.label :author %><br />
		<%= f.text_field :author %>
	</p>

	<p>
		<%= f.label :body %><br />
		<%= f.text_area :body %>
	</p>

	<p>
		<%= f.submit %>
	</p>
<% end %>
</p>