
<div class="container">
      <div class="row">
        <div class="col-12">
          <h2><%= t('login.login_title') %></h2>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <%= f.label t('login.login_email_field_title') %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>

            <div class="field">
              <%= f.label t('login.login_password_field_title') %><br />
              <%= f.password_field :password, autocomplete: "current-password" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label t('login.login_remember_checkbox_title') %>
              </div>
            <% end %>

            <div class="actions">
              <%= f.submit t('login.login_button') %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>

        </div>
      </div>
</div>
